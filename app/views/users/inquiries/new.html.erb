<div class="container">
	<div class="row">
		<div class="col">
			<div style="margin: 120px;">
				<h2><%= t 'inquiries.new.contact' %></h2>

				<%= form_with model: @inquiry do |f|  %>
					<%= t 'inquiries.new.name' %><br>
					<%= f.text_field :name %><br>
					<%= t 'inquiries.new.message' %><br>
					<%= f.text_area :message,:size=>"50x10" %><br>
					<%= f.submit t('inquiries.new.send') %><br>
				<% end %>
				<div id="overlay">
				  <div class="cv-spinner">
				    <span class="spinner"></span>
				  </div>
				</div>

			</div>
		</div>
	</div>
</div>
