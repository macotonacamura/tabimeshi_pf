<% if review.liked_by?(current_user) %>
	<%= link_to review_like_path(review), method: :delete, remote:true do %>
  		<span class="fas fa-heart" aria-hidden="true"> </span>
	<% end %>
	<%= review.likes.count %>
<% else %>
	<%= link_to review_like_path(review),method: :post, remote:true do %>
		<span class="far fa-heart" aria-hidden="true"></span>
	<% end %>
	<%= review.likes.count %>
<% end %>
