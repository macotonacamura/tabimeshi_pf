<div class="page" style="height: 1000px;">
	<div class="container main-box" >
		<h2>post review</h2>

		<%= form_with model: @review,url:reviews_path(@review.id), method: :post, local: true do |f| %>
			<table class="table">
				<tr>
					<th><%= f.label 'restaurant name' %></th>
					<td><%= f.text_field :restaurant_name %></td>
				</tr>
				<tr>
					<th>
					<div class="form-group" id="star" style="width:300px;">
						<%= f.label :rate, style: "margin-right: 35px;" %>
						<%= f.hidden_field :rate, id: :review_star %>
					</div>
					</th>
					<script>
					  $('#star').raty({
					   size: 35,
					   starOff:  "/assets/star-off.png",
					   starOn: "/assets/star-on.png",
					   starHalf: "/assets/star-half.png",
					   scoreName: 'review[rate]',
					   half: true,
					 });
					</script>
				</tr>

				<tr>
					<th><%= f.label 'country' %>  <%= f.label 'city' %></th>
					<td><%= f.text_field :country,:size=>"10" %>　<%= f.text_field :city %></td>

				</tr>

				<tr>
					<th><%= f.label 'address' %></th>
					<td><%= f.text_area :address %></td>
				</tr>

				<tr>
					<th><%= f.label 'budget' %></th>
					<td><%= f.text_field :budget %> 〜 <%= f.text_field :muximum_budget %></td>
				</tr>

				<tr>
					<th><%= f.label 'review' %></th>
					<td><%= f.text_area :review ,:size=>"50" %></td>
				</tr>

				<tr>
					<th><%= f.label 'images' %></th>
					<td>
						<div class="post__drop__box__container">
				            <div class="prev-content"></div>
				            <div class="label-content">
				              <label class="abel-box" for="item_images_attributes_0_image" id="label-box--0">
				                <pre class="label-box__text-visible"></pre>
				              </label>
				            </div>
				            <div class="img-field">
				                <%= f.fields_for :review_images do |i| %>
				                  <%= i.file_field :image , class: "img-field" %>
			                    <% end %>
			                </div>
			                <div class="prev-list">
								  <%= image_tag "no_image.jpg", id: :img_prev_0 %>
								  <%= image_tag "no_image.jpg", id: :img_prev_1 %>
								  <%= image_tag "no_image.jpg", id: :img_prev_2 %>
								  <%= image_tag "no_image.jpg", id: :img_prev_3 %>
								  <%= image_tag "no_image.jpg", id: :img_prev_4 %>
							</div>


								<script type="text/javascript">
								  $(function() {
								    function readURL(input,index) {
								        if (input.files && input.files[0]) {
								        var reader = new FileReader();
								        reader.onload = function (e) {
								    $('#img_prev_'+ index).attr('src', e.target.result);
								        }
								        reader.readAsDataURL(input.files[0]);
								        }
								    }
								    $("#review_review_images_attributes_0_image").change(function(){
								        readURL(this,0);
								    });
								     $("#review_review_images_attributes_1_image").change(function(){
								        readURL(this,1);
								    });
								      $("#review_review_images_attributes_2_image").change(function(){
								        readURL(this,2);
								    });
								       $("#review_review_images_attributes_3_image").change(function(){
								        readURL(this,3);
								    });
								        $("#review_review_images_attributes_4_image").change(function(){
								        readURL(this,4);
								    });
								  });
								</script>
				          </div>
		        		</div>
					</td>
				</tr>

				<tr>
					<th></th>
				<td><%= f.submit 'post', class: "btn btn-light" %></td>
				</tr>

			</table>
		<% end %>
	</div>
</div>

