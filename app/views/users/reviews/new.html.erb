<div class="page" style="height: 1000px;">
	<div class="container" >
		<h2 class="title">post review</h2>

		<%= form_with model: @review, url:reviews_path(@review.id), method: :post, local: true do |f| %>
			<table class="table">
				<tr>
					<th><%= f.label 'restaurant name' %></th>
					<td><%= f.text_field :restaurant_name %></td>
				</tr>
				<tr>
					<th>
					<div class="form-group" id="star" style="width:300px;">
						<%= f.label :rate, style: "margin-right: 35px;" %>
						<%= f.hidden_field :rate, id: :review_star %>
					</div>
					</th>
					<script>
					  $('#star').raty({
					   size: 35,
					   starOff:  "/assets/star-off.png",
					   starOn: "/assets/star-on.png",
					   starHalf: "/assets/star-half.png",
					   scoreName: 'review[rate]',
					   half: true,
					 });
					</script>
				</tr>

				<tr>
					<th><%= f.label 'country' %>  <%= f.label 'city' %></th>
					<td><%= f.text_field :country,:size=>"10" %>　<%= f.text_field :city %></td>

				</tr>

				<tr>
					<th><%= f.label 'address' %></th>
					<td><%= f.text_area :address %></td>
				</tr>

				<tr>
					<th><%= f.label 'budget' %></th>
					<td><%= f.text_field :budget %> 〜 <%= f.text_field :muximum_budget %></td>
				</tr>

				<tr>
					<th><%= f.label 'review' %></th>
					<td><%= f.text_area :review ,:size=>"50" %></td>
				</tr>

				<tr>
					<th><%= f.label 'images' %></th>
					<td>
						<div class="post__drop__box__container">
				            <div class="prev-content"></div>
				            <div class="label-content">
				              <label class="label-box" for="review_images_attributes_0_image" id="label-box--0">
				                <pre class="label-box__text-visible"></pre>
				              </label>
				            </div>
				            <div class="hidden-content">


							      <%= f.file_field :image, name: "review[review_images][][image]", class: "hidden-field", :style=> 'display: none;' %>
							      <input class="hidden-field" id="review_images_attributes_1_image" name="review[review_images][1][image]" type="file"></input>

							      <%= f.file_field :image, name: "review[review_images][][image]", class: "hidden-field", :style=> 'display: none;' %>
							      <input class="hidden-field" id="review_images_attributes_2_image" name="review[review_images][2][image]" type="file"></input>

							      <%= f.file_field :image, name: "review[review_images][][image]", class: "hidden-field", :style=> 'display: none;' %>
							      <input class="hidden-field" id="review_images_attributes_3_image" name="review[review_images][3][image]" type="file"></input>

							      <%= f.file_field :image, name: "review[review_images][][image]", class: "hidden-field", :style=> 'display: none;' %>
							      <input class="hidden-field" id="review_images_attributes_4_image" name="review[review_images][4][image]" type="file"></input>

		        		</div>
					</td>
				</tr>

				<tr>
					<th></th>
				<td><%= f.submit 'post', class: "btn btn-light" %></td>
				</tr>

			</table>
		<% end %>
	</div>
</div>

