<div class="post_page">
	<div class="container responsive">
		<div class="row main-box">
			<div class="col-md-5 fadein">
				<div id="container">
				  <div id="theTarget">
					<div class="image1"></div>
				    <div class="image2"></div>
				    <div class="image4"></div>
				    <div class="image3"></div>
				  </div>
				</div>
			</div>

			<div class="link-list col-md-7 fadein">
				<button class="btn-circle-flat" data-toggle="modal" data-target=".bd-example-modal-lg" style="color: #fff;">Destination</button>

				<%= link_to 'Post', new_review_path,class: 'btn-circle-flat post_button', :style=>"color:#fff;" %>
				<%= link_to 'Find people', users_path,class: 'btn-circle-flat find_button', :style=>"color:#fff;" %>
				<a class="btn-circle-flat discover_button"  id="to-lists" data-toggle="pill" href="#to-lists" role="tab" aria-controls="v-pills-messages" aria-selected="false" style="color: #fff;">Discover</a>
			</div>
		</div>

		<div class=" row popullar fadein mt-5" style="display: block;">
			 <h2>Search popular areas</h2>


			<div style="padding:30px;" class="multiple-items">

				<%= link_to reviews_path(continent_id: 1), method: :get, remote: true do %>
					<div class="popular_area_asia">
						<div class="popular_area-content">
							<h3 style="color:#fff;">Asia</h3>
						</div>
					</div>
				<% end %>

				<%= link_to reviews_path(continent_id: 2), method: :get, remote: true do %>
				<div class="popular_area_america">
					<div class="popular_area-content">
						<strong><h3 style="color:#fff;">North America</h3></strong>
					</div>
				</div>
				<% end %>

				<%= link_to reviews_path(continent_id: 3), method: :get, remote: true do %>
				<div class="popular_area_europe">
					<div class="popular_area-content">
						<strong><h3 style="color:#fff;">Europe</h3></strong>
					</div>
				</div>
				<% end %>

				<%= link_to reviews_path(continent_id: 4), method: :get, remote: true do %>
				<div class="popular_area_oseania">
					<div class="popular_area-content">
						<strong><h3 style="color:#fff;">Oceania</h3></strong>
					</div>
				</div>
				<% end %>

				<%= link_to reviews_path(continent_id: 5), method: :get, remote: true do %>
				<div class="popular_area_africa">
					<div class="popular_area-content">
						<strong><h3 style="color:#fff;">Africa</h3></strong>
					</div>
				</div>
				<% end %>

				<%= link_to reviews_path(continent_id: 6), method: :get, remote: true do %>
				<div class="popular_area_south_america">
					<div class="popular_area-content">
						<strong><h3 style="color:#fff;">South America</h3></strong>
					</div>
				</div>
				<% end %>

			</div>
		</div>


		<div class="row review_list_index">
			<h2 class="title_new_posts fadein" >Posts list</h2>
			<div id="review_index">
				<%= render 'users/reviews/reviews_list', reviews: @reviews %>
			</div>
			<div><%= paginate @reviews , class: "pagination" %></div>
		</div>

		<script>
	      $(function(){
	        // #to-listsで発火 sth
	        $('a[href^="#to-lists"]').click(function() {
	          // スクロールの速度
	          var speed = 400; // ミリ秒
	          var href= $(this).attr("href");
	          var target = $(href == "#" || href == "" ? 'html' : href);
	          var position = target.offset().top;
	          $('body,html').animate({scrollTop:position}, speed, 'swing');
	          return false;
	        });
	      });
	    </script>
	</div>
</div>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content" style="padding:10px;">
    	<span style="margin-left: 10px;">目的地から検索</span>
      	 <%= form_with  url:reviews_path, method: :get, local: true do |f| %>
       	 <%= f.text_field :country, id:"form", placeholder:"国名を入力してください", :size=>"40x12" %>
     	 <%= f.submit 'search', class: "btn btn-xs btn-outline-secondary mb-2" %>
	 	 <select id="result"></select>
	  <% end %>
     </div>
  </div>
</div>