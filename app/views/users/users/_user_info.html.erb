<div class="info-box_index_show fadein">
	<div>
		<%= image_tag user.profile_image.url, class: 'profile_img_index_show' %>
	</div>
	<div class="user_info_index_show fadein">
		<h3 class="user_name ml-2">
			<%= link_to user_path(user.id), :style=>"color:#444;" do %>
				<%= user.user_name %>
			<% end %>
		</h3>
		<div id="follow_button_<%= @user.id %>" style="margin-top: 10px;">
			<%= render 'users/relationships/follow_button', user: user,reviews:user.reviews %>
		</div>
			<div style="padding-bottom: 10px;">
				<div style="padding: 5px;">
					<%= link_to likes_list_path(current_user.id), :style=>"color:#444;" do %>
						<i class="fas fa-heart"></i> <%= t 'users.show.page_you_liked' %>
					<% end %>
					<% if current_user == user && current_user.user_name != 'GuestUser'  %>
						<%= link_to edit_user_path(current_user.id), :style=>"color:#444;" do %>
							<i class="fas fa-wrench ml-3"></i> <%= t 'users.show.edit_your_profile' %>
						<% end %>
					<% end %>
				</div>
			</div>
	</div>
</div>