<div class="page">
	<div class="container">
		<div class="row">
			<div class="col">

				<h3>Follower List</h3>

					<table class="table" style="text-align: center; margin: 0 auto;">

						<% @users.each do |user| %>
							<tr>
								<td><%= image_tag user.profile_image.url, fallback: "no_image.jpg" ,class: 'profile_img' %></td>
								<td><%= link_to  user_path(user), class: "user_#{user.id}", :style=>"color:#444;"  do%><%= user.user_name %><% end %></td>
								<td><%= user.introduction %></td>
							</tr>
						<% end %>

					</table>
			</div>
		</div>
	</div>
</div>