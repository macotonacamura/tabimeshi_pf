<div class="page">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 edit_form">
				<h1>Edit Profile</h1>
				<% if @user.errors.any? %>
			        <div id="error_explanation">
			            <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
			            <ul>
			                <% @user.errors.full_messages.each do |message| %>
			                	<li><%= message %></li>
			                	<% end %>
			            </ul>
			        </div>
	    		<% end %>

				<%= form_with model: @user,url:user_path(current_user.id), method: :patch, local: true do |f| %>

					<table class="table">
						<tr>
							<%= f.file_field :profile_image ,id: :profile_image, placeholder: "select" %>
							<% if @user.profile_image.present? %>
							  <%= image_tag @user.profile_image.url,class: 'profile_img-edit mb-2', id: :img_prev %>
							<% else %>
							  <%= image_tag "no_image.jpg",class: 'profile_img-edit mb-2', id: :img_prev %>
							<% end %>
						</tr>
						<script type="text/javascript">
						  $(function() {
						    function readURL(input) {
						        if (input.files && input.files[0]) {
							        var reader = new FileReader();
							        reader.onload = function (e) {
							    		$('#img_prev').attr('src', e.target.result);
							        }
							        reader.readAsDataURL(input.files[0]);
						        }
						    }
						    $("#profile_image").change(function(){
						        readURL(this);
						    });
						  });
						</script>
						<tr>
							<th><%= f.label 'user name' %></th>
							<td><%= f.text_field :user_name ,:size=>"21", placeholder: "ユーザーネーム" %></td>
						</tr>
						<tr>
							<th><%= f.label 'introduction' %></th>
							<td><%= f.text_area :introduction ,:size=>"40", placeholder: "紹介文(50字まで)", class: "introduction_area" %></td>
						</tr>
						<tr>
							<th>Private Information</th>
						</tr>
						<tr>
							<th><%= f.label 'email' %></th>
							<td><%= f.text_field :email,:size=>"21" %></td>
						</tr>
						<tr>
							<th></th>
						<td><%= f.submit 'update', class: "btn btn-outline-secondary" %></td>
						</tr>
					</table>

				<% end %>
				<%= link_to users_unsubscribe_path(current_user.id), class: "btn btn-outline-dark" do %>退会画面<% end %>

			</div>
		</div>


	</div>
</div>