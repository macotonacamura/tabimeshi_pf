<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1>Edit Profile</h1>


			<%= form_with model: @user,url:user_path(current_user.id), method: :patch, local: true do |f| %>
			<table class="table">
				<tr>
					<th><%= attachment_image_tag @user, :profile_image, format: 'jpg', fallback: "no_image.jpg" ,size:"50x50" %><br></th>
					<td><%= f.attachment_field :profile_image, placeholder: "select" %></td>
				</tr>
				<tr>
					<th><%= f.label 'user name' %></th>
					<td><%= f.text_field :user_name %></td>
				</tr>
				<tr>
					<th><%= f.label 'introduction' %></th>
					<td><%= f.text_field :introduction %></td>
				</tr>
				<tr>
					<th>Private Information</th>
				</tr>
				<tr>
					<th><%= f.label 'email' %></th>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
				<td><%= f.submit 'send', class: "btn btn-default" %></td>
				</tr>
			</table>
			<% end %>
		</div>
	</div>
</div>