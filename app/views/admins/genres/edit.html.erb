<div class="container" style="margin-top: 100px">
	<div class="row">
		<div class="col-xs-12" style="height: 1000px;">



			<%= form_with model: @genre, url:admins_genre_path(@genre.id), method: :patch, local: true do |f| %>
				<div class="field">
					<%= f.label :genre_name %>
					<%= f.text_field :genre_name, class: "name" %>
				</div>

				<label><%= f.radio_button :is_active, :true %> 有効 </label>
				<label><%= f.radio_button :is_active, :false %> 無効</label>

				<div class="actions">
					<%= f.submit %>
				</div>
			<% end %>

		</div>
	</div>
</div>