<div class="admin-user-index-page">
	<div class="container main">
		<div class="row">
			<div class="col">
				<h2 style="margin: 130px 0 50px 0;">ユーザー一覧</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>会員ID</th>
							<th>　ステータス</th>
							<th>　ユーザーネーム</th>
							<th>　メールアドレス</th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= image_tag user.profile_image.url, fallback: "no_image.jpg" ,class: 'profile_admin_index' %></td>
								<td><%= user.id%></td>
								<td>
									<%if user.is_deleted == false %>
										<span>有効</span>
									<% else %>
										<span>無効</span>
									<% end %>
								</td>
								<td>
									<%= link_to admins_user_path(user.id) do %>
										<%= user.user_name %>
									<% end %>
								</td>
								<td>
									<%= user.email %>
								</td>
							</tr>
						<% end %>
						<%= paginate @users %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


